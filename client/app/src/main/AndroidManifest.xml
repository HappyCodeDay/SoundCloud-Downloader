<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.theah64.soundclouddownloader">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".utils.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ui.activities.DownloaderActivity">
            <intent-filter android:priority="9998">
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="text/plain" />
            </intent-filter>
            <intent-filter android:priority="9999">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:host="www.soundcloud.com"
                    android:scheme="http" />
                <data
                    android:host="www.soundcloud.com"
                    android:scheme="https" />
                <data
                    android:host="m.soundcloud.com"
                    android:scheme="http" />
                <data
                    android:host="m.soundcloud.com"
                    android:scheme="https" />
                <data
                    android:host="soundcloud.com"
                    android:scheme="http" />
                <data
                    android:host="soundcloud.com"
                    android:scheme="https" />
            </intent-filter>
        </activity>

        <service
            android:name=".services.DownloaderService"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".ui.activities.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activities.PlaylistDownloadActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ui.activities.TestActivity" />
        <activity
            android:name=".ui.activities.PlaylistTracksActivity"
            android:label="@string/title_activity_playlist_tracks"></activity>
    </application>

</manifest>